{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "types": [
      "node",
    ],
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./dist/",
    "./node_modules/",
  ]
}
